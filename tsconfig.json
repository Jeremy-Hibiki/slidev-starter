{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "lib": ["esnext"],
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "jsx": "preserve",
    "types": ["node", "vite/client"]
  },
  "exclude": ["**/dist/**", "**/node_modules/**"]
}
